name:                rievaulx
version:             0.1.0.0
synopsis:            Autocompletion server.
-- description:
homepage:            https://ryankaske.com
license:             MIT
license-file:        LICENSE
author:              Ryan Kaskel
maintainer:          dev@ryankaskel.com
-- copyright:
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >= 1.10

executable rievaulx
  main-is:             Main.hs
  -- other-modules:
  other-extensions:    OverloadedStrings
  build-depends:         base >= 4.6 && < 4.7
                       , containers >= 0.5 && < 0.6
                       , array >= 0.4 && < 0.5
                       , random >= 1.0 && < 1.1
                       , split >= 0.2 && < 0.3
                       , bytestring >= 0.10 && < 0.11
                       , text >= 1.1 && < 1.2
                       , wai >= 2.1 && < 2.2
                       , warp >= 2.1 && < 2.2
                       , wai-middleware-static >= 0.5 && < 0.6
                       , http-types >= 0.8 && < 0.9
                       , aeson >= 0.7 && < 0.8
  hs-source-dirs:      src
  default-language:    Haskell2010
